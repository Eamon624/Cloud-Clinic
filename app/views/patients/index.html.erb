<div class="col-md-8">
<h3 class="current-clinic"><%= params[:clinic] %></h3>

<hr>

<h2 align = "center">Registered Patients</h2>

<hr>

<% if @patients.count == 0 %>
  <h2>No patients currently recorded within this clinic.</h2>
<% else %>
<% @patients.each do |patient| %>
  <h2><%= link_to patient.name, patient_path(patient) %></h2>

  <hr>

  <% end %>
<% end %>
</div>

<div class="col-md-4">

<div class="well">



    <center>
    <i class="fa fa-plus-square-o fa-5x" aria-hidden="true"></i>
    <h5><%= link_to "Add Patient", new_patient_path %></h5>
  </center>


      <hr>

    <h2 align ="center">Search Patient</h2>
    <p></p>

      <%= form_tag patients_path, class:'navbar-form', :method => 'get' do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class:'form-control' %>
          <div class="input-group-btn">
            <%= submit_tag "Search", class: 'btn btn-info' %>
          </div>
        </div>
      <% end %>

      <hr>

   



</div>
</div>
