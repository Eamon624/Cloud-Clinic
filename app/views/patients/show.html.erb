<h1><%= @patient.name %></h1>

<hr>

<div class="col-md-7">

  <div class="well">

  <hr>
 
  <h5>Current Clinic: <%= @patient.clinic.name %></h5>
  <hr>
  

  
  <h5>Illness:</h5>
  <p><%= @patient.information %></p>
  <hr>

    <h5>Phone Number: <%= @patient.contactinfo %></h5>
  <hr>

  </div>


  <div class="col-md-3">
    <center>
      
      <h5><%= link_to "Edit", edit_patient_path(@patient) %></h5>
    </center>
  </div>

  <div class="col-md-3">
    <center>
      
      <h5><%= link_to "Delete", patient_path(@patient), method: :delete, data: { confirm: "Are you sure?" } %></h5>
    </center>
  </div>







  <div class="col-md-3">
    <center>
      
      <h5><%= link_to "Add Appointment", new_patient_appointment_path(@patient) %></h5>
    </center>
  </div>

</div>

<div class="col-md-5">


    <div class="well well-lg">
    <h3 align = "Center">Upcoming Appointments</h3>
    <hr>
    <%= render @patient.appointments %>
  </div>




</div>
